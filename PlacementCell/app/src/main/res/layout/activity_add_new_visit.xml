<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="application.nis.com.placementcell.AddNewVisit">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="New Visit"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ScrollView
        android:paddingTop="40dp"
        android:id="@+id/signupscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:id="@+id/newvisitform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
      <!-- Check Boxes -->
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <AutoCompleteTextView
                    android:id="@+id/vbranch"
                    android:layout_width="342dp"
                    android:layout_height="52dp"
                    android:hint="Branches"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <AutoCompleteTextView
                    android:id="@+id/vname"
                    android:layout_width="342dp"
                    android:layout_height="52dp"
                    android:hint="Visit Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                     />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <AutoCompleteTextView
                    android:id="@+id/RequiredCgpa"
                    android:layout_width="342dp"
                    android:layout_height="52dp"
                    android:hint="Required Cgpa"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                     />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <AutoCompleteTextView
                    android:id="@+id/vrhsc"
                    android:layout_width="342dp"
                    android:layout_height="52dp"
                    android:hint="Required 12th Percentage"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <AutoCompleteTextView
                    android:id="@+id/vrmetric"
                    android:layout_width="342dp"
                    android:layout_height="52dp"
                    android:hint="Required 10th Percentage"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <AutoCompleteTextView
                    android:id="@+id/vaddress"
                    android:layout_width="342dp"
                    android:layout_height="52dp"
                    android:hint="Visit Place "
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                     />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/newvisitbtn"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:text="Add New Visit"
                android:textStyle="bold"
                android:background="@drawable/ovalbutton"/>

        </LinearLayout>










    </ScrollView>
</RelativeLayout>
