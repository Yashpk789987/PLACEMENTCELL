<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="application.nis.com.placementcell.UV">

    <EditText
        android:id="@+id/visitdate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="53dp"
        android:background="@color/colorPrimary"
        android:hint=" When To Go??"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:text="Let's Visit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/visitdate"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="Visit date" />


    <AutoCompleteTextView
        android:id="@+id/info"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/visitdate"
        android:layout_marginTop="45dp"
        android:hint="Visit Information "
        android:inputType="text"
        android:maxLines="5"
        android:singleLine="false" />

    <Button
        android:id="@+id/done"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/info"
        android:layout_marginTop="28dp"
        android:background="@drawable/ovalbutton"
        android:text=" Complete This Visit  "
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/visitsubmit"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/done"
        android:layout_marginTop="40dp"
        android:background="@drawable/ovalbutton"
        android:text=" Submit "
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>
